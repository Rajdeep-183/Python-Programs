def first_and_last_occurrence(s,a):
    first = -1
    last = -1
    for i in range(len(s)):
        if s[i]==a:
            if first == -1:
                first = i
            last = i
    return (first,last)

print(first_and_last_occurrence('hello','l'))
print(first_and_last_occurrence('aditya','a'))

#Output#
(2, 3)
(0, 5)
